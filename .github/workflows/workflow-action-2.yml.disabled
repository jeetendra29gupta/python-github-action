name: My Second Python Action with Libraries  # A clear name for the new workflow

on:
  push:
    branches:
      - main  # Trigger this workflow on every push to the main branch

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repository
        uses: actions/checkout@v4

      - name: Set up Python 3.10
        uses: actions/setup-python@v5
        with:
          python-version: '3.10'

      - name: Install dependencies from requirements.txt
        # This is the key step: it installs the 'requests' library
        run: pip install -r requirements.txt

      - name: Run the updated Python script
        run: python main.py