name: My Github Action for formatting my code

on:
  push:
    branches:
      - main

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repository
        uses: actions/checkout@v4

      - name: Set up Python 3.10
        uses: actions/setup-python@v5
        with:
          python-version: '3.10'

      - name: Install dependencies from requirements.txt
        run: pip install -e ".[test,dev]"

      - name: Run Pytest
        # The key new step! This command runs all your tests.
        run: pytest

      - name: Check formatting with black
        run: black --check .

      - name: Lint with flake8
        run: flake8 . && flake8 . --count --select=E9,F63,F7,F82 --show-source --statistics

      - name: Run the updated Python script
        run: python main.py && python src/request_joke.py